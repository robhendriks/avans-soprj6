<Window x:Class="GoInsp.View.WindowTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoInsp.View"
        mc:Ignorable="d"
        Title="GoInsp" Style="{StaticResource windowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30pt"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="250" MaxWidth="300" Width="0.4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Style="{StaticResource headerStyle}"/>
        <Label Style="{StaticResource headerTitleStyle}" Content="Inspectie Voorbereiden" />

        <Rectangle Style="{StaticResource menuHeaderStyle}" />
        <Label Style="{StaticResource menuTitleStyle}" Content="Menu" />
        <Image Style="{StaticResource menuImageStyle}" />

        <StackPanel Style="{StaticResource menuStyle}">
            
        </StackPanel>

    </Grid>
</Window>
