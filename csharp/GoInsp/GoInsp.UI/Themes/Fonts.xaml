<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Fonts-->
    <Style x:Key="FontBase" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="14px"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="FontXS" TargetType="{x:Type Control}" BasedOn="{StaticResource FontBase}">
        <Setter Property="FontSize" Value="12px"/>
    </Style>

    <Style x:Key="FontS" TargetType="{x:Type Control}" BasedOn="{StaticResource FontBase}">
        <Setter Property="FontSize" Value="14px"/>
    </Style>

    <Style x:Key="FontM" TargetType="{x:Type Control}" BasedOn="{StaticResource FontBase}">
        <Setter Property="FontSize" Value="18px"/>
    </Style>

    <Style x:Key="FontL" TargetType="{x:Type Control}" BasedOn="{StaticResource FontBase}">
        <Setter Property="FontSize" Value="24px"/>
    </Style>

    <Style x:Key="FontXL" TargetType="{x:Type Control}" BasedOn="{StaticResource FontBase}">
        <Setter Property="FontSize" Value="30px"/>
    </Style>
    <!--/Fonts-->
    
</ResourceDictionary>